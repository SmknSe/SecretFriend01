<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/pass"
        motion:constraintSetStart="@+id/rest"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:onTouchUp="autoCompleteToStart"
            motion:touchAnchorId="@id/textGroupName"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@id/textGroupName" />

        <KeyFrameSet>

            <KeyPosition
                motion:drawPath="path"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/textGroupName"
                motion:percentX="0.5"
                motion:percentY="0.1" />

        </KeyFrameSet>

    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/like"
        motion:constraintSetStart="@+id/rest"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragRight"
            motion:onTouchUp="autoCompleteToStart"
            motion:touchAnchorId="@+id/textGroupName"
            motion:touchAnchorSide="right"
            motion:touchRegionId="@id/textGroupName" />
        <KeyFrameSet>

            <KeyPosition
                motion:drawPath="path"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/textGroupName"
                motion:percentX="0.5"
                motion:percentY="-0.1" />

        </KeyFrameSet>

    </Transition>

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/offScreenLike"
        motion:constraintSetStart="@+id/like"
        motion:duration="150">

    </Transition>

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/offScreenPass"
        motion:constraintSetStart="@+id/pass"
        motion:duration="150">

    </Transition>

    <ConstraintSet android:id="@id/rest">

        <Constraint android:id="@id/textGroupName">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="50dp" />

        </Constraint>
        <Constraint
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/deleteBtn"
            motion:layout_constraintTop_toBottomOf="@+id/close_btn2"
            motion:layout_editor_absoluteX="50dp"
            android:layout_width="272dp"
            android:layout_height="616dp" />


    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/pass"
        motion:deriveConstraintsFrom="@+id/rest">

        <Constraint
            android:id="@id/textGroupName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintWidth_percent="0.7">

        </Constraint>


    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenPass"
        motion:deriveConstraintsFrom="@id/pass">

        <Constraint
            android:id="@id/textGroupName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="500dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintWidth_percent="0.7">

        </Constraint>



    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/like"
        motion:deriveConstraintsFrom="@id/rest">

        <Constraint
            android:id="@id/textGroupName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintWidth_percent="0.7" />




    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenLike"
        motion:deriveConstraintsFrom="@id/like">

        <Constraint
            android:id="@id/textGroupName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintWidth_percent="0.7" />


    </ConstraintSet>
</MotionScene>